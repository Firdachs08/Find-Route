<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewFullnameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap:"
        android:textSize="18sp"
        android:layout_below="@id/textViewProfileTitle"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_toRightOf="@id/textViewFullnameLabel"
        android:layout_alignBaseline="@id/textViewFullnameLabel"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewUsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:textSize="18sp"
        android:layout_below="@id/textViewFullnameLabel"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_toRightOf="@id/textViewUsernameLabel"
        android:layout_alignBaseline="@id/textViewUsernameLabel"
        android:padding="16dp"/>

    <!-- Tambahkan tombol untuk mengedit profil -->
    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>


    <!-- Add more TextViews for other user information if needed -->

</RelativeLayout>
